<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:id="@+id/liuliang"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:gravity="center"
            android:text="--"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/huafei"
            app:layout_constraintTop_toBottomOf="@+id/liuliangWZ"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/huafei"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:gravity="center"
            android:text="--"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/liuliang"
            app:layout_constraintRight_toLeftOf="@+id/yuying"
            app:layout_constraintTop_toBottomOf="@+id/huafeiWZ"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/yuying"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:gravity="center"
            android:text="--"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/huafei"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyingWZ"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:gravity="center"
            android:id="@+id/liuliangWZ"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:text="--"
            app:layout_constraintBottom_toTopOf="@+id/liuliang"
            app:layout_constraintLeft_toLeftOf="@+id/liuliang"
            app:layout_constraintRight_toRightOf="@+id/liuliang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:gravity="center"
            android:id="@+id/huafeiWZ"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:text="--"
            app:layout_constraintBottom_toTopOf="@+id/huafei"
            app:layout_constraintLeft_toLeftOf="@+id/huafei"
            app:layout_constraintRight_toRightOf="@+id/huafei"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/yuyingWZ"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:text="--"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/yuying"
            app:layout_constraintLeft_toLeftOf="@+id/yuying"
            app:layout_constraintRight_toRightOf="@+id/yuying"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/liuliangWZ"
            app:layout_constraintStart_toEndOf="@+id/liuliangWZ"
            app:layout_constraintTop_toTopOf="@+id/liuliangWZ" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextViewText"
            app:layout_constraintBottom_toBottomOf="@+id/huafeiWZ"
            app:layout_constraintStart_toEndOf="@+id/huafeiWZ"
            app:layout_constraintTop_toTopOf="@+id/huafeiWZ" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>